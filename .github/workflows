name: TTBL Scraper

on:
  workflow_dispatch:

permissions:
  contents: write   # permet le commit dans ton repo

jobs:
  scrape:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.11

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install playwright
          playwright install

      - name: Run scraper
        run: python scraper.py

      - name: Upload artifact (fichier clair)
        uses: actions/upload-artifact@v4
        with:
          name: TTBL_2025_26.ics
          path: TTBL_2025_26.ics

      - name: Commit et push fichier mis à jour
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"
          git add TTBL_2025_26.ics
          git commit -m "Update TTBL_2025_26.ics depuis workflow" || echo "Aucun changement à committer"
          git push  
